{
    "title": "NeverBot - Core Metrics",
    "tags": [
        "neverbot",
        "discord",
        "openai"
    ],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "panels": [
        {
            "type": "timeseries",
            "title": "Discord Command Latency (p50/p90/p99)",
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROM}"
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.5, sum(rate(discord_command_latency_ms_bucket[5m])) by (le))"
                },
                {
                    "expr": "histogram_quantile(0.9, sum(rate(discord_command_latency_ms_bucket[5m])) by (le))"
                },
                {
                    "expr": "histogram_quantile(0.99, sum(rate(discord_command_latency_ms_bucket[5m])) by (le))"
                }
            ]
        },
        {
            "type": "stat",
            "title": "OpenAI Error Rate (5m)",
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROM}"
            },
            "targets": [
                {
                    "expr": "sum(rate(openai_request_errors_total[5m]))"
                }
            ]
        },
        {
            "type": "stat",
            "title": "Discord Rate Limit Hits (5m)",
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROM}"
            },
            "targets": [
                {
                    "expr": "sum(rate(discord_rate_limit_hits_total[5m]))"
                }
            ]
        }
    ]
}